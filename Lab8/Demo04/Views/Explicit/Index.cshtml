@model IEnumerable<Demo04.Models.Customer>

@{
    ViewData["Title"] = "Explicit Loading Demo";
}

<div class="container mt-4">
    <h1 class="text-primary">Explicit Loading Demo</h1>
    <p class="lead">Danh sách khách hàng (Chưa tải Orders)</p>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Orders Count (In Memory)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.FullName</td>
                    <td>
                        <span class="badge bg-secondary">@item.Orders.Count</span>
                        @if(item.Orders.Count == 0)
                        {
                            <span class="text-muted small ms-2">(Chưa load)</span>
                        }
                    </td>
                    <td>
                        <a asp-action="LoadOrders" asp-route-id="@item.CustomerId" class="btn btn-warning btn-sm">
                            <i class="bi bi-download"></i> Explicit Load Orders
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <div class="alert alert-info mt-3">
        <i class="bi bi-info-circle-fill"></i> <strong>Lưu ý:</strong>
        Khi danh sách này được hiển thị, thuộc tính <code>Orders</code> của Customer đang rỗng (Count = 0) vì chúng ta không dùng <code>Include()</code> (Eager Loading) và không dùng <code>virtual</code> (Lazy Loading).
    </div>
</div>
