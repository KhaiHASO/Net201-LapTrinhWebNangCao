@model IEnumerable<Demo03.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Demo 2: Lazy Loading</h2>
    <p class="lead">Select a customer to view details and trigger Lazy Loading for Orders.</p>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Customer Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.CustomerName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info text-white">
                            <i class="bi bi-eye-fill"></i> View Details (Trigger Lazy Load)
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
