@{
    ViewData["Title"] = "Dashboard - Demo03";
}

<!-- Hero Section -->
<div class="bg-gradient-primary text-white p-5 rounded-3 mb-4 shadow">
    <div class="container-fluid py-3">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-airplane-fill me-3"></i>Dashboard Demo03
        </h1>
        <p class="fs-5 mb-0">InverseProperty - Multiple Relationships</p>
        <p class="mb-0"><small>Môn C#4 - Lập trình Web Nâng cao - FPT Polytechnic</small></p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <!-- Total Airports Card -->
    <div class="col-xl-6 col-md-6">
        <div class="card border-0 shadow-sm h-100 card-hover">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Tổng số sân bay</h6>
                        <h2 class="mb-0 fw-bold text-primary">@ViewBag.TotalAirports</h2>
                    </div>
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-circle p-3">
                        <i class="bi bi-geo-alt-fill fs-3"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Airports" asp-action="Index" class="text-decoration-none small">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Flights Card -->
    <div class="col-xl-6 col-md-6">
        <div class="card border-0 shadow-sm h-100 card-hover">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Tổng chuyến bay</h6>
                        <h2 class="mb-0 fw-bold text-success">@ViewBag.TotalFlights</h2>
                    </div>
                    <div class="icon-shape bg-success bg-opacity-10 text-success rounded-circle p-3">
                        <i class="bi bi-airplane-engines-fill fs-3"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Flights" asp-action="Index" class="text-decoration-none small">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row g-4">
    <!-- Recent Flights -->
    <div class="col-lg-7">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-clock-history text-info me-2"></i>
                        Chuyến bay gần đây
                    </h5>
                    <a asp-controller="Flights" asp-action="Index" class="btn btn-sm btn-outline-primary">
                        Xem tất cả
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.RecentFlights != null && ViewBag.RecentFlights.Count > 0)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var flight in ViewBag.RecentFlights)
                        {
                            <div class="list-group-item border-0 px-0 py-3">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="icon-shape bg-info bg-opacity-10 text-info me-3 p-2 rounded">
                                        <i class="bi bi-airplane-fill fs-5"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-semibold">@flight.FlightNumber</h6>
                                        <div class="d-flex align-items-center text-muted small">
                                            <span class="badge bg-primary me-2">@flight.DepartureAirport?.Code</span>
                                            <i class="bi bi-arrow-right mx-2"></i>
                                            <span class="badge bg-success">@flight.ArrivalAirport?.Code</span>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-info">@flight.Status</span>
                                    </div>
                                </div>
                                <div class="ms-5 ps-2">
                                    <small class="text-muted">
                                        <i class="bi bi-geo-fill text-primary me-1"></i>@flight.DepartureAirport?.Name
                                        <i class="bi bi-arrow-right mx-2"></i>
                                        <i class="bi bi-geo-fill text-success me-1"></i>@flight.ArrivalAirport?.Name
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                        <p>Chưa có chuyến bay nào</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Airports Overview -->
    <div class="col-lg-5">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                        Sân bay
                    </h5>
                    <a asp-controller="Airports" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>Thêm
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.Airports != null && ViewBag.Airports.Count > 0)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var airport in ViewBag.Airports)
                        {
                            <div class="list-group-item border-0 px-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="icon-shape bg-primary bg-opacity-10 text-primary me-3 p-2 rounded">
                                        <i class="bi bi-geo-alt-fill fs-5"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-semibold">@airport.Name</h6>
                                        <small class="text-muted">
                                            <span class="badge bg-secondary">@airport.Code</span>
                                            <span class="mx-1">•</span>
                                            @airport.City
                                        </small>
                                    </div>
                                </div>
                                <div class="mt-2 ms-5 ps-2">
                                    <small class="text-muted">
                                        <i class="bi bi-airplane-fill text-primary me-1"></i>Đi: @airport.DepartingFlights.Count
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-airplane-fill text-success me-1"></i>Đến: @airport.ArrivingFlights.Count
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                        <p>Chưa có sân bay nào</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card border-0 shadow-sm bg-light">
            <div class="card-body py-4">
                <h5 class="mb-3 fw-bold">
                    <i class="bi bi-lightning-charge-fill text-warning me-2"></i>
                    Thao tác nhanh
                </h5>
                <div class="row g-3">
                    <div class="col-md-3">
                        <a asp-controller="Flights" asp-action="Create" class="btn btn-success w-100 py-3">
                            <i class="bi bi-airplane-fill fs-4 d-block mb-2"></i>
                            <span class="fw-semibold">Thêm chuyến bay</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Flights" asp-action="Index" class="btn btn-primary w-100 py-3">
                            <i class="bi bi-list-ul fs-4 d-block mb-2"></i>
                            <span class="fw-semibold">Danh sách bay</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Airports" asp-action="Create" class="btn btn-info w-100 py-3">
                            <i class="bi bi-geo-alt-fill fs-4 d-block mb-2"></i>
                            <span class="fw-semibold">Thêm sân bay</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Airports" asp-action="Index" class="btn btn-warning w-100 py-3">
                            <i class="bi bi-building fs-4 d-block mb-2"></i>
                            <span class="fw-semibold">Danh sách sân bay</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- InverseProperty Explanation -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card border-0 shadow-sm border-start border-primary border-4">
            <div class="card-body">
                <h5 class="fw-bold text-primary mb-3">
                    <i class="bi bi-diagram-3 me-2"></i>
                    InverseProperty - Multiple Relationships
                </h5>
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="fw-semibold mb-3">Vấn đề:</h6>
                        <p class="mb-2">Một <code>Flight</code> có 2 FK trỏ đến <code>Airport</code>:</p>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <code>DepartureAirportId</code> - Sân bay đi
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <code>ArrivalAirportId</code> - Sân bay đến
                            </li>
                        </ul>
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Vấn đề:</strong> EF Core không biết map như thế nào!
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="fw-semibold mb-3">Giải pháp: [InverseProperty]</h6>
                        <pre class="bg-dark text-light p-3 rounded mb-3"><code>// Trong Airport.cs
[InverseProperty("DepartureAirport")]
public ICollection&lt;Flight&gt; DepartingFlights { get; set; }

[InverseProperty("ArrivalAirport")]
public ICollection&lt;Flight&gt; ArrivingFlights { get; set; }</code></pre>
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <strong>Kết quả:</strong> EF Core hiểu rõ 2 mối quan hệ!
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Flights" asp-action="Create" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-play-fill me-1"></i>Test InverseProperty
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card-hover {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .icon-shape {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
