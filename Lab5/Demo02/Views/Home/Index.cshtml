@{
    ViewData["Title"] = "Dashboard - Demo02";
}

<!-- Hero Section -->
<div class="bg-gradient-primary text-white p-5 rounded-3 mb-4 shadow">
    <div class="container-fluid py-3">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-speedometer2 me-3"></i>Dashboard Demo02
        </h1>
        <p class="fs-5 mb-0">Data Annotations Validation & Fluent API Cascade Delete</p>
        <p class="mb-0"><small>Môn C#4 - Lập trình Web Nâng cao - FPT Polytechnic</small></p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <!-- Total ClassRooms Card -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100 card-hover">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Tổng số lớp</h6>
                        <h2 class="mb-0 fw-bold text-primary">@ViewBag.TotalClassRooms</h2>
                    </div>
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-circle p-3">
                        <i class="bi bi-building fs-3"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="ClassRooms" asp-action="Index" class="text-decoration-none small">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Students Card -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100 card-hover">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Tổng sinh viên</h6>
                        <h2 class="mb-0 fw-bold text-success">@ViewBag.TotalStudents</h2>
                    </div>
                    <div class="icon-shape bg-success bg-opacity-10 text-success rounded-circle p-3">
                        <i class="bi bi-people-fill fs-3"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Students" asp-action="Index" class="text-decoration-none small">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Average GPA Card -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100 card-hover">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Điểm TB chung</h6>
                        <h2 class="mb-0 fw-bold text-info">@ViewBag.AverageGPA.ToString("F2")</h2>
                    </div>
                    <div class="icon-shape bg-info bg-opacity-10 text-info rounded-circle p-3">
                        <i class="bi bi-graph-up-arrow fs-3"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="small text-muted">Trên thang điểm 10</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Highest GPA Card -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100 card-hover">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-2">Điểm cao nhất</h6>
                        <h2 class="mb-0 fw-bold text-warning">@ViewBag.HighestGPA.ToString("F2")</h2>
                    </div>
                    <div class="icon-shape bg-warning bg-opacity-10 text-warning rounded-circle p-3">
                        <i class="bi bi-trophy-fill fs-3"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="small text-muted">Sinh viên xuất sắc</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row g-4">
    <!-- Top Students -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-star-fill text-warning me-2"></i>
                        Top 5 Sinh viên xuất sắc
                    </h5>
                    <a asp-controller="Students" asp-action="Index" class="btn btn-sm btn-outline-primary">
                        Xem tất cả
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.TopStudents != null && ViewBag.TopStudents.Count > 0)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var student in ViewBag.TopStudents)
                        {
                            <div class="list-group-item border-0 px-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-3">
                                        @student.FullName.Substring(0, 1)
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-semibold">@student.FullName</h6>
                                        <small class="text-muted">
                                            <i class="bi bi-building me-1"></i>@student.ClassRoom?.ClassName
                                            <span class="mx-2">•</span>
                                            <i class="bi bi-envelope me-1"></i>@student.Email
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-success fs-6 px-3 py-2">
                                            <i class="bi bi-star-fill me-1"></i>@student.GPA.ToString("F2")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                        <p>Chưa có dữ liệu sinh viên</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- ClassRooms Overview -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-building text-primary me-2"></i>
                        Danh sách lớp học
                    </h5>
                    <a asp-controller="ClassRooms" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>Thêm lớp
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.ClassRooms != null && ViewBag.ClassRooms.Count > 0)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var classRoom in ViewBag.ClassRooms)
                        {
                            <div class="list-group-item border-0 px-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="icon-shape bg-primary bg-opacity-10 text-primary me-3 p-2 rounded">
                                        <i class="bi bi-building fs-5"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-semibold">@classRoom.ClassName</h6>
                                        <small class="text-muted">
                                            <i class="bi bi-tag me-1"></i>Mã lớp: @classRoom.ClassCode
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-info fs-6 px-3 py-2">
                                            <i class="bi bi-people-fill me-1"></i>@classRoom.Students.Count SV
                                        </span>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <a asp-controller="ClassRooms" asp-action="Details" asp-route-id="@classRoom.ClassRoomId" 
                                       class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-eye me-1"></i>Chi tiết
                                    </a>
                                    <a asp-controller="ClassRooms" asp-action="Delete" asp-route-id="@classRoom.ClassRoomId" 
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('⚠️ Xóa lớp này sẽ XÓA TẤT CẢ sinh viên thuộc lớp (Cascade Delete). Bạn có chắc chắn?')">
                                        <i class="bi bi-trash me-1"></i>Xóa
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                        <p>Chưa có lớp học nào</p>
                        <a asp-controller="ClassRooms" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-1"></i>Tạo lớp học đầu tiên
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card border-0 shadow-sm bg-light">
            <div class="card-body py-4">
                <h5 class="mb-3 fw-bold">
                    <i class="bi bi-lightning-charge-fill text-warning me-2"></i>
                    Thao tác nhanh
                </h5>
                <div class="row g-3">
                    <div class="col-md-3">
                        <a asp-controller="Students" asp-action="Create" class="btn btn-success w-100 py-3">
                            <i class="bi bi-person-plus-fill fs-4 d-block mb-2"></i>
                            <span class="fw-semibold">Thêm sinh viên</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Students" asp-action="Index" class="btn btn-primary w-100 py-3">
                            <i class="bi bi-list-ul fs-4 d-block mb-2"></i>
                            <span class="fw-semibold">Danh sách SV</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="ClassRooms" asp-action="Create" class="btn btn-info w-100 py-3">
                            <i class="bi bi-building-add fs-4 d-block mb-2"></i>
                            <span class="fw-semibold">Thêm lớp học</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="ClassRooms" asp-action="Index" class="btn btn-warning w-100 py-3">
                            <i class="bi bi-building fs-4 d-block mb-2"></i>
                            <span class="fw-semibold">Danh sách lớp</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Demo Features Info -->
<div class="row g-4 mt-2">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm border-start border-primary border-4">
            <div class="card-body">
                <h5 class="fw-bold text-primary mb-3">
                    <i class="bi bi-shield-check me-2"></i>
                    Data Annotations Validation
                </h5>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <code>[Required]</code> - Bắt buộc nhập
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <code>[StringLength]</code> - Giới hạn độ dài (3-50 ký tự)
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <code>[Range(0, 10)]</code> - Điểm từ 0-10
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <code>[EmailAddress]</code> - Kiểm tra email
                    </li>
                </ul>
                <div class="mt-3">
                    <a asp-controller="Students" asp-action="Create" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-play-fill me-1"></i>Test Validation
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border-0 shadow-sm border-start border-danger border-4">
            <div class="card-body">
                <h5 class="fw-bold text-danger mb-3">
                    <i class="bi bi-trash3 me-2"></i>
                    Fluent API Cascade Delete
                </h5>
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Cảnh báo:</strong> Xóa lớp học sẽ tự động xóa tất cả sinh viên!
                </div>
                <p class="mb-3">
                    Cấu hình trong <code>DemoContext.cs</code>:
                </p>
                <pre class="bg-dark text-light p-3 rounded"><code>.OnDelete(DeleteBehavior.Cascade)</code></pre>
                <div class="mt-3">
                    <a asp-controller="ClassRooms" asp-action="Index" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-play-fill me-1"></i>Test Cascade Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card-hover {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .icon-shape {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .avatar-circle {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
    }
</style>
