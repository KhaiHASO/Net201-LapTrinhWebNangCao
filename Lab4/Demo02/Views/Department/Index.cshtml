@model IEnumerable<Demo02.Models.Department>

@{
    ViewData["Title"] = "Phòng Ban & Nhân Viên";
}

<div class="container mt-4">
    <h2 class="text-success mb-4 border-bottom pb-2">
        <i class="bi bi-diagram-3"></i> Danh Sách Phòng Ban
    </h2>
    <p class="alert alert-success">
        <i class="bi bi-info-circle-fill"></i> Trang này minh họa mối quan hệ <strong>Một - Nhiều</strong>. Dữ liệu nhân viên được lấy thông qua <code>Include(d => d.Employees)</code>.
    </p>

    <div class="row">
        @foreach (var dept in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow border-success">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">@dept.DepartmentName</h4>
                        <span class="badge bg-light text-success rounded-pill">ID: @dept.DepartmentID</span>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-3 text-muted">Danh sách nhân viên (@dept.Employees.Count):</h6>
                        @if (dept.Employees.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var emp in dept.Employees)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-person me-2"></i>@emp.EmployeeName</span>
                                        <span class="badge bg-secondary rounded-pill">NV-@emp.EmployeeID</span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted fst-italic">Chưa có nhân viên nào.</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
