@model IEnumerable<Demo02.Models.Customer>

@{
    ViewData["Title"] = "Danh Sách Khách Hàng";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4 border-bottom pb-2">
        <i class="bi bi-people"></i> Danh Sách Khách Hàng
    </h2>
    <p class="alert alert-info">
        <i class="bi bi-info-circle-fill"></i> Bảng này minh họa cách EF Core tự động nhận diện <code>CustomerID</code> là Primary Key mà không cần Data Annotation.
    </p>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="py-3 ps-4">ID</th>
                        <th class="py-3">Họ Tên</th>
                        <th class="py-3">Số Điện Thoại</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.CustomerID</td>
                            <td>@item.CustomerName</td>
                            <td><span class="badge bg-light text-dark border">@item.PhoneNo</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
