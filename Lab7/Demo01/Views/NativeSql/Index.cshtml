@{
    ViewData["Title"] = "Native SQL Demos";
}

<div class="text-center">
    <h1 class="display-4">Native SQL Queries Demo</h1>
    <p>Choose a demo scenario below:</p>
</div>

<div class="row mt-4">
    <div class="col-md-6 offset-md-3">
        <div class="list-group">
            <a asp-action="RawQueryBasic" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">1. FromSqlRaw (SELECT)</h5>
                </div>
                <p class="mb-1">Basic SELECT query with placeholders.</p>
            </a>
            <a asp-action="InterpolatedQuery" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">2. FromSqlInterpolated (SELECT)</h5>
                </div>
                <p class="mb-1">SELECT query using String Interpolation ($"").</p>
            </a>
            <a asp-action="RawUpdate" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">3. ExecuteSqlRaw (UPDATE)</h5>
                </div>
                <p class="mb-1">Execute UPDATE command.</p>
            </a>
            <a asp-action="InterpolatedDelete" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">4. ExecuteSqlInterpolated (DELETE)</h5>
                </div>
                <p class="mb-1">Execute DELETE command safely.</p>
            </a>
             <a asp-action="UnsafeQuery" class="list-group-item list-group-item-action list-group-item-danger">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">5. SQL Injection Test (Unsafe)</h5>
                </div>
                <p class="mb-1">Demonstrate SQL Injection vulnerability.</p>
            </a>
        </div>
    </div>
</div>

@if(TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Message"]
    </div>
}
