@{
    ViewData["Title"] = "Interpolated Delete";
}

<h1>ExecuteSqlInterpolated Demo</h1>
<p>Command: <code>DELETE FROM Students WHERE Id = {id}</code></p>

<div class="alert alert-danger">
    <strong>Warning:</strong> This will permanently delete a record.
</div>

<form asp-action="InterpolatedDelete" method="post" class="row g-3 align-items-center">
    <div class="col-auto">
        <label for="id" class="col-form-label">Student Id:</label>
    </div>
    <div class="col-auto">
        <input type="number" id="id" name="id" class="form-control" required>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
