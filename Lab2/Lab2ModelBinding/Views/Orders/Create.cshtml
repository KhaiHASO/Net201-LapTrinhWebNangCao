@model Lab2ModelBinding.Models.Order

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <h4>Order Information</h4>
            <div class="mb-3">
                <label asp-for="CustomerName" class="form-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                 <select asp-for="Status" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        
        <div class="col-md-12 mt-3">
            <h4>Order Details</h4>
            <table class="table table-bordered" id="order-details-table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="order-details-body">
                    <!-- Dynamic rows will be here -->
                </tbody>
            </table>
            <button type="button" class="btn btn-info" id="add-item-btn">Add Product</button>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Create Order</button>
         <a asp-action="Filter" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        let itemIndex = 0;

        document.getElementById('add-item-btn').addEventListener('click', function() {
            const tableBody = document.getElementById('order-details-body');
            const row = document.createElement('tr');
            
            row.innerHTML = `
                <td>
                    <input name="OrderDetails[${itemIndex}].ProductName" class="form-control" placeholder="Product Name" required />
                </td>
                <td>
                    <input name="OrderDetails[${itemIndex}].Quantity" type="number" class="form-control" value="1" min="1" required />
                </td>
                <td>
                    <input name="OrderDetails[${itemIndex}].Price" type="number" step="0.01" class="form-control" value="0" required />
                </td>
                <td>
                    <button type="button" class="btn btn-danger remove-btn">Remove</button>
                </td>
            `;
            
            tableBody.appendChild(row);
            itemIndex++;

            // Re-bind remove buttons (simplest way for dynamic content in vanadium JS)
            row.querySelector('.remove-btn').addEventListener('click', function() {
                row.remove();
                // Note: MVC Model Binding requires sequential indices (0, 1, 2...). 
                // If we remove items in the middle, we might need to re-index. 
                // However, for simple Add/Submit flows without complex editing, this often works if indices are unique.
                // But generally, best practice is to re-index all inputs on remove.
                reIndexRows();
            });
        });

        function reIndexRows() {
            const rows = document.querySelectorAll('#order-details-body tr');
            itemIndex = 0;
            rows.forEach(row => {
                row.querySelectorAll('input').forEach(input => {
                    // Update name attribute to reflect new index
                    // Regex replacement to change [X] to [NewIndex]
                    input.name = input.name.replace(/\[\d+\]/, `[${itemIndex}]`);
                });
                itemIndex++;
            });
        }
    </script>
}
