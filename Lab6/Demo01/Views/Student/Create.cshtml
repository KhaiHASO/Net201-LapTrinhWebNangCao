@model Demo01.Models.Student

@{
    ViewData["Title"] = "Thêm mới sinh viên";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                <h2 class="text-primary fw-bold text-center mb-0">
                    <i class="bi bi-person-plus-fill me-2"></i>Thêm Mới Sinh Viên
                </h2>
                <p class="text-center text-muted mt-2">Điền thông tin bên dưới để tạo hồ sơ sinh viên mới. Form này được bảo vệ bởi Data Annotations.</p>
            </div>
            
            <div class="card-body p-4">
                <!-- Alert hướng dẫn -->
                <div class="alert alert-info border-0 bg-info-subtle shadow-sm mb-4">
                    <h5 class="alert-heading"><i class="bi bi-info-circle-fill me-2"></i>Quy tắc Validation:</h5>
                    <ul class="mb-0 small">
                        <li><strong>Họ tên:</strong> Bắt buộc, tối thiểu 5 ký tự.</li>
                        <li><strong>Email:</strong> Phải đúng định dạng email (vd: abc@domain.com).</li>
                        <li><strong>Tuổi:</strong> Phải nằm trong khoảng 18 đến 100.</li>
                        <li><strong>Điểm TB (GPA):</strong> Từ 0.0 đến 10.0.</li>
                    </ul>
                </div>

                <form asp-action="Create" class="needs-validation">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên" />
                        <label asp-for="FullName"><i class="bi bi-person me-1"></i>Họ và tên</label>
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Email"><i class="bi bi-envelope me-1"></i>Email</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Age" class="form-control" placeholder="Tuổi" />
                                <label asp-for="Age"><i class="bi bi-calendar3 me-1"></i>Tuổi (18-100)</label>
                                <span asp-validation-for="Age" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Gpa" class="form-control" placeholder="Điểm TB" />
                                <label asp-for="Gpa"><i class="bi bi-mortarboard me-1"></i>Điểm TB (0-10)</label>
                                <span asp-validation-for="Gpa" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary px-5 fw-bold">
                            <i class="bi bi-save me-1"></i>Lưu Hồ Sơ
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
